<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#205072">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="22sp"
            android:id="@+id/preHrs"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="22sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="22sp"
            android:id="@+id/preMins"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="22sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="22sp"
            android:id="@+id/preSecs"></TextView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/delete_imgview"
        android:background="#80000000"
        android:layout_gravity="center"
        android:padding="0dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/deletePresetBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/trashicon"
            android:layout_centerInParent="true"></ImageView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>